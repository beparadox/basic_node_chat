<div class="container-fluid">

    <div class="row">

        <div id="main_content" class="col-xs-12">

        <div id="chat_header" class="row">

          <div class="col-xs-12 col-md-offset-3 col-md-6">
            <h3 class='text-left'>
            Welcome to BAMNode Chat. This is a basic chat room application written in JavasScript using node. Based upon the <a href="">node_chat</a> application.
           </h3>

            <div>
            <form id="join_chat">
                <label for="nickname">Nickname:</label>
                <input type="text" id="nickname" name="nickname">
                <button name="submit_nickname">Join</button>
            </form>
            </div>

            <span id="screen_dims"></div>
          </div><!-- end of col -->

        </div><!-- end of class row-->

        <div id="chat_messages" class="row">
           <div class="col-xs-12">


           </div><!-- end of column -->
        </div><!-- end of row-->

          

            <div id="footer">
              <div id="footer_msgbar" class="container-fluid">

              </div>

               <div id="enter_message_wrapper" class="container-fluid">
                  <input id="enter_message" type="text" placeholder="Enter message here" autofocus> 


               </div>
            </div><!-- end of footer-->

        </div><!--end of main_content-->

    </div><!--end of class row-->

</div><!--end of container-fluid-->
